<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/Date_view_title_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whats the date ?"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        />
    <EditText
        android:id="@+id/dateboxDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/Date_view_title_dialog"
        app:layout_constraintTop_toBottomOf="@id/Date_view_title_dialog"
        android:layout_marginTop="5dp"
        android:hint="Enter the Date"
        android:layout_marginStart="32dp"
        app:boxCornerRadiusBottomEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusTopStart="5dp"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/day_view_title_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whats the day ?"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateboxDate"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        />
    <EditText
        android:id="@+id/edit_text_day"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/Date_view_title_dialog"
        app:layout_constraintTop_toBottomOf="@id/day_view_title_dialog"
        android:layout_marginTop="5dp"
        android:layout_marginStart="32dp"
        android:hint="Enter the Day"
        app:boxCornerRadiusBottomEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusTopStart="5dp"
        />
    <Button
        android:id="@+id/addButton_date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:elevation="2dp"
        android:text="Add"
        app:layout_constraintTop_toBottomOf="@id/edit_text_day"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"/>
    <Button
        android:id="@+id/exitButtonDia_date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:elevation="2dp"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@id/edit_text_day"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="22dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/exitButtonDia_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>